# Therapy Navigation System - Multi-AI Configuration
# Copy this file to .env and fill in your actual values

# ====================
# GCP Configuration
# ====================
GCP_PROJECT_ID=therapy-nav-poc-quan
GCP_REGION=us-central1
# For Application Default Credentials (ADC):
# Run: gcloud auth application-default login
# Or set: GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ====================
# AI Provider Configuration
# ====================

# Gemini Configuration (Google AI)
GEMINI_API_KEY=your-gemini-api-key-here
# Get from: https://makersuite.google.com/app/apikey
# Or for Vertex AI: https://console.cloud.google.com/vertex-ai

# OpenAI Configuration (GPT-5 when available)
OPENAI_API_KEY=your-openai-api-key-here
# Get from: https://platform.openai.com/api-keys

# Anthropic Configuration (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Get from: https://console.anthropic.com/settings/keys

# ====================
# AI Model Selection
# ====================
AI_PROVIDER=gemini  # Options: gemini, openai, anthropic, multi
AI_MODEL=gemini-2.0-flash  # Or: gpt-4o, gpt-5 (when available), claude-3-opus
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# Multi-AI Collaboration Mode
ENABLE_MULTI_AI=false  # Set to true to enable AI collaboration
PRIMARY_AI=gemini  # Main AI for therapy sessions
SECONDARY_AI=openai  # Secondary AI for validation
TERTIARY_AI=anthropic  # Third AI for consensus

# ====================
# Application Configuration
# ====================
PORT=8083
ENVIRONMENT=dev  # dev, staging, prod
DATABASE_URL=sqlite://therapy.db

# Security
JWT_SECRET=dev-secret-change-in-prod
SESSION_SECRET=dev-session-secret

# Feature Flags
ENABLE_AUTH=false
ENABLE_ANALYTICS=false
ENABLE_CACHING=false

# ====================
# Monitoring
# ====================
LOG_LEVEL=info
SENTRY_DSN=
OTEL_ENDPOINT=

# ====================
# Development Tools
# ====================
ENABLE_DEBUG=true
ENABLE_PROMPT_BROWSER=true
ENABLE_DEMO_RECORDING=false